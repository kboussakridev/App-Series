{% extends 'base.html.twig' %}

{% block body %}
<section class="series-list">
    {# afficher les series #}
    {% for serie in series %}
    <article>
        <a href="{{ path('series_details',{'id': serie.id}) }}"
           title="View serie's details | {{ serie.seasons|length }} seasons">
            <img src="{{ asset('asset/img/posters/series/' ~ serie.poster) }}" alt="{{ serie.name }}">
        </a>
    </article>
    {% endfor %}
</section>
{% endblock %}

